<section id="contact" class="py-20 px-8 bg-gradient-to-br from-[#1f0021] to-[#751006] text-white">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
    Ponte en contacto con nosotros
  </h2>
    <form action="#" method="POST" class="max-w-xl mx-auto p-6 bg-white text-black border-2 border-gray-100 shadow-2xl rounded-2xl space-y-5">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Tu nombre"
          required
          class="mt-1 block w-full rounded-lg border border-gray-300 p-3 shadow-sm focus:border-black focus:ring-black"
        />
      </div>
    
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="tucorreo@ejemplo.com"
          required
          class="mt-1 block w-full rounded-lg border border-gray-300 p-3 shadow-sm focus:border-black focus:ring-black"
        />
      </div>

    
      <div>
        <label for="message" class="block text-sm font-medium text-gray-700">Cuéntanos más</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          placeholder="Escribe tu mensaje aquí..."
          required
          class="mt-1 block w-full rounded-lg border border-gray-300 p-3 shadow-sm focus:border-black focus:ring-black"
        ></textarea>
      </div>
    
      <div>
        <button
          type="submit"
          class="w-full bg-[#e2a165] text-white py-3 px-6 rounded-lg font-semibold cursor-pointer hover:shadow-lg transition-colors"
        >
          Enviar mensaje
        </button>
      </div>
    </form>
</section>